<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TrackNWork</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/Scripts/jquery-3.7.1.js")

    @Styles.Render("~/Content/ej2/fluent.css")
    @Scripts.Render("~/Scripts/ej2/ej2.min.js")
</head>
<body>
    <div class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/home/index">
            <img src="/Images/TracknWork_Logo.png" alt="Track’n’Work Logo" height="40">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/home/index">&Uuml;bersicht<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/home/about">Projektzeit erfassen</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/home/contact">Admin</a>
                </li>
            </ul>
            @*<form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>*@
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    <footer>
        <div class="container body-content">
            <hr />
            <p>&copy; @DateTime.Now.Year - TrackNWork</p>
        </div>
    </footer>
    <script>
        const token = localStorage.getItem('supabase_token');
        const currentPath = window.location.pathname.toLowerCase();

        const isLoginPage = currentPath.includes("/authentication/login");

        if (!token && !isLoginPage) {
            window.location.href = "/Authentication/Login";
        }
    </script>


    @Scripts.Render("~/bundles/jquery")


    @Html.EJS().ScriptManager()
    @Scripts.Render("~/Scripts/supabase-js.js")

    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
